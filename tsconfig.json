{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,

    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["node"],

    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "allowJs": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "inlineSourceMap": false,
    "outDir": "./dist",
    "target": "esnext",

    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src/**/*", "external/**/*"]
}
